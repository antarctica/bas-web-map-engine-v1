<?xml version="1.0" encoding="UTF-8"?>
<StyledLayerDescriptor version="1.0.0"
                       xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd"
                       xmlns="http://www.opengis.net/sld"
                       xmlns:ogc="http://www.opengis.net/ogc"
                       xmlns:xlink="http://www.w3.org/1999/xlink"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <NamedLayer>
        <Name>User line layer SLD</Name>
        <UserStyle>
            <Title>Apply a line symboliser</Title>         
            <FeatureTypeStyle>
                <Rule>
                    <Name>Line</Name>
                    <Title>Line</Title>
                    <LineSymbolizer>
                        <Stroke>
                            <CssParameter name="stroke">{stroke_color}</CssParameter>
                            <CssParameter name="stroke-width">{stroke_width}</CssParameter>
                            <CssParameter name="stroke-dasharray">{stroke_linestyle}</CssParameter>
                        </Stroke>
                    </LineSymbolizer>                                        
                </Rule>
            </FeatureTypeStyle>
        </UserStyle>
    </NamedLayer>
</StyledLayerDescriptor>